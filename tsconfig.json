{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015"
		],
		"module": "es2015",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "dist/esm",
		"sourceMap": true,
		"target": "es2015",
		"esModuleInterop": true
	},
	"files": [
		"src/index.ts",
		"src/alternative/index.ts"
	]
}
